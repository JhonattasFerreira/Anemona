<html>
    <head>
        <title>Anemona</title>
    </head>
    
    <body>
        <header class="navbar navbar-fixed-top navbar-inverse">
          <div class="container">
              <a id="logo" href="#">Anemona</a>
            <nav>
              <ul class="nav navbar-nav navbar-right">
                <li> <a href="/home">Home</a> </li>
                <li><a href="/comunity">Comunidade</a></li>
                <li><a href="/posts">Desabafos</a></li>
                <li><a href="/whoUse">Quem Usa</a></li>
                <li><a href="/contact">Contato</a></li>
              </ul>
            </nav>
          </div>
        </header>
        <div class="container padding-title">
            <div class="row">
                <div class="row information">
                    <div class="col-md-1">
                        <h6>Cod: <%= @post.id %></h6>
                    </div>
                    <div class="col-md-3">
                        <h6>Tópico: #<%= @post.topic %></h6>
                    </div>
                </div>
                <div class="row content">
                    <div class="col-md-12 padding-title-20">
                        <p>
                            <%= @post.content %>
                        </p>
                    </div>
                </div>
            </div>
            
            <% if @post.comments.any? %>
                <% @comments.each do |comments| %>
                <div class="row comment-space">
                    <div class="row information">
                        <div class="col-md-1">
                            <h6>Cod: <%= comments.id %></h6>
                        </div>
                        <div class="col-md-3">
                            <h6>Tópico: #<%= comments.post.topic %></h6>
                        </div>
                    </div>
                    <div class="row content">
                        <div class="col-md-12 padding-title-20">
                            <p>
                                <%= comments.content %>
                            </p>
                        </div>
                    </div>
                </div>
                <% end %>
            <% end %>
            
            <div class="row center padding-title">
              <div class="col-md-6 col-md-offset-3 mb-27">
                  <%= form_for(@comment, url: newComment_path) do |f| %>
                  <div class="field">
                    <%= f.text_area :content, placeholder: "Compartilhe um desabafo...", class: 'form-control' %>
                  </div>
                  <%= f.submit "Post", class: "btn btn-primary" %>
                    <% end %>
              </div>  
            </div>
            
        </div>
    </body>
</html>